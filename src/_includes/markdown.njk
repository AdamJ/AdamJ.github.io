---
layout: base.njk
---

<section class="responsive">
  <div class="center-align">
    <h1>{{ title }}</h1>
    <h5>
      {{ description }}
    </h5>
    {%- if (headerButton) -%}
    <div class="small-space"></div>
    <a href="{{ primaryURL}}" alt="Primary action">
      <button class="large small-elevate">{{ primaryAction }}</button>
    </a>
    <div class="medium-space"></div>
    {%- else -%}{%- endif -%}
  </div>
</div>

<section class="responsive">
  {%- if (tocBlock) -%}
    {%- if content | toc -%}
    <sl-details summary="Table of Contents">
      {{ content | toc | safe }}
    </sl-details>
    {%- else -%}
    {%- endif -%}
  {%- else -%}
  {%- endif -%}
  <div class="medium-space"></div>
  <div class="page right active">
    {{ content | safe }}
  </div>
</section>
