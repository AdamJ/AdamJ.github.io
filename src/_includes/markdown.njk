---
layout: base.njk
---

<link rel="stylesheet" href="{{ '/css/print.css' | url }}" media="print" />
<link rel="stylesheet" href="{{ '/css/markdown.css' | url }}" />

<section class="hero">
  <h1>{{ title }}</h1>
  <p class="text-lead mb-4">{{ description }}</p>
  {%- if (headerButton) -%}
  <a href="{{ primaryURL}}" class="btn btn-secondary">{{ primaryAction }}</a>
  {%- else -%}{%- endif -%}
</section>

{% if 'credits' in page.url %}
  <section>
    {{ content | safe }}
  </section>
{% else %}
  <section>
    {{ content | safe }}
  </section>
{% endif %}
