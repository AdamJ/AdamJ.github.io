{
  "name": "jolicoeur",
  "title": "Adam J. Jolicoeur",
  "version": "9.7.0",
  "author": "Adam J. Jolicoeur",
  "homepage": "https://www.adamjolicoeur.com",
  "license": "Apache-2.0",
  "licenseUrl": "https://github.com/adamj/adamj.github.io/blob/main/LICENSE",
  "main": "index.js",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "clean": "rm -rf docs",
    "eleventy": "eleventy",
    "eleventy:serve": "eleventy --serve",
    "watch:eleventy": "eleventy --serve --port=8081",
    "watch:sass": "sass --no-source-map --watch src/assets/css:docs/assets/css",
    "css:build": "sass src/assets/css/main.scss docs/assets/css/main.css && postcss docs/assets/css/main.css --use autoprefixer cssnano -o docs/assets/css/main.css",
    "css:critical": "critical index.html --base docs/ --extract --width 1300 --height 900 > src/assets/css/critical.css",
    "js:build": "terser src/assets/js/*.js -o docs/assets/js/main.js --compress --mangle",
    "images:optimize": "node scripts/image-optimizer.js",
    "build": "npm run clean && npm run images:optimize && eleventy && npm run css:build && npm run js:build",
    "start": "npm-run-all images:optimize css:build --parallel watch:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdamJ/AdamJ.github.io.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/AdamJ/AdamJ.github.io/issues"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.1",
    "@11ty/eleventy-activity-feed": "^2.0.0",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-navigation": "^1.0.4",
    "@11ty/eleventy-plugin-inclusive-language": "^1.0.3",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.1",
    "@11ty/import": "^1.0.15",
    "autoprefixer": "^10.4.21",
    "critical": "^7.2.1",
    "cssnano": "^7.0.7",
    "eleventy-plugin-dropcap": "^1.1.0",
    "eleventy-plugin-toc": "^1.1.5",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-eleventy-img": "^0.10.2",
    "markdown-it-highlightjs": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "sass": "^1.89.2",
    "sharp": "^0.33.5",
    "stylelint": "^16.20.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "stylelint-order": "^7.0.0",
    "terser": "^5.39.0"
  },
  "browserslist": [
    "> 5%, not dead",
    "last 2 major versions"
  ],
  "dependencies": {
    "clean-css": "^5.3.3"
  }
}
